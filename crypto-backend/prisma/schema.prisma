datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String      @id @default(uuid())
  firstName String
  lastName  String
  birthDate DateTime
  dni       String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  cryptos   Cryptocurrency[]  // Relaci√≥n con criptomonedas
}

model Cryptocurrency {
  id        String  // ID de la criptomoneda
  userId    String  // ID del usuario
  name      String
  symbol    String
  price     Float
  trend     Float
  user      User    @relation(fields: [userId], references: [id])

  @@id([id, userId]) // Clave primaria compuesta
}
