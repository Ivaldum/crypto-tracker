datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int           @id @default(autoincrement())
  email     String        @unique
  password  String
  createdAt DateTime      @default(now())
  cryptos   Cryptocurrency[]
}

model Cryptocurrency {
  id        Int      @id @default(autoincrement())
  name      String
  symbol    String
  price     Float
  trend     Float
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
}
