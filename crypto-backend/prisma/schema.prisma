datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  birthDate DateTime
  dni       String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  cryptos   Cryptocurrency[]  // Relaci√≥n con criptomonedas
}

model Cryptocurrency {
  id        Int      @id @default(autoincrement())
  name      String
  symbol    String
  price     Float
  trend     Float
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
}
